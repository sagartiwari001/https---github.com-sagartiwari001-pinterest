<% include ./partials/header.ejs %>

  <div class=" w-full min-h-screen bg-zinc-800  pt-1 ">
    <div class="cards flex flex-wrap gap-10 px-10  mt-16">
      <% posts.forEach(function(elem){ %>

        <div class="card w-32 text-white relative">
          <div class="card relative w-full h-40 bg-sky-200 rounded-lg overflow-hidden">
            <span id="add" class="text-center">
              <a href="/save" class=" button absolute ml-16 mt-1 h-5 w-14 rounded-lg bg-red-700 text-xs font-semibold">Save</a>
            </span>
            <img class=" w-full h-full object-cover cursor-pointer zoom-effect" src="/images/uploads/<%= elem.image %>">

          </div>
          <h5 class="mt-2 text-sm">
            <%= elem.title %>
          </h5>
          <!-- <h5 class="mt-2 text-sm ">Posted by: <%= elem.user.username %></h5> -->
        </div>
        <% })%>

    </div>
  </div>


