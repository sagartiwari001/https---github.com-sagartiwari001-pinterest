<% include ./partials/header.ejs %>

    <div class=" w-full min-h-screen bg-zinc-800  pt-1 ">
        <div class="cards flex flex-wrap gap-10 px-10 mt-16">
            <% user.posts.forEach(function(elem){ %>
                <div class=" card w-32 text-white">
                    <div class="w-full h-40 bg-sky-200 rounded-lg overflow-hidden">
                        <img class="w-full h-full object-cover cursor-pointer zoom-effect" src="/images/uploads/<%= elem.image %>">
                    </div>
                    <h5 class="mt-2 text-sm"><%= elem.title %></h5>
                </div>
                <% })%>

        </div>
    </div>


    <style>
        .zoom-effect {
          transition: transform 0.3s ease-in-out;
        }
      
        .zoom-effect:hover {
          transform: scale(1.1);
        }
      </style>
    <% include ./partials/footer.ejs %>