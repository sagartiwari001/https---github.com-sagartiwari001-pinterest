<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-5">
 <h1 class=" text-xl text-white">Create a new post</h1>
 <hr class="opacity-10 mt-3">
 <form action="/createPost" method="post" enctype="multipart/form-data">
    <input class="block w-1/4 px-3 py-2 border-2" type="file" name="postimage">
    <input class="block w-1/4 px-3 py-2 border-2 rounded-md" type="text" placeholder="Title" name="title">
    <input class="block w-1/4 px-3 py-2 border-2 rounded-md" type="text" placeholder="Description" name="description">
    <input class="block w-1/4 px-3 py-2  rounded-md bg-red-800 " type="submit" value="Create Post">
    
 </form>
</div>

